{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Mint Starter Kit",
  "locale": "it",
  "colors": {
    "primary": "#8771FD",
    "light": "#A896FF",
    "dark": "#6B5AC9"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentazione",
        "groups": [
          {
            "group": "Primi passi",
            "pages": [
              "index",
              "guida-rapida"
            ]
          },
          {
            "group": "Caratteristiche Assistente",
            "pages": [
              "essentials/panoramica",
              "essentials/knowledge-base",
              "essentials/lingua",
              "essentials/messaggio-iniziale",
              "essentials/prompt"
            ]
          },
          {
            "group": "Tools",
            "pages": [
              "tools/calendar",
              "tools/inoltro-chiamate",
              "essentials/images",
              "essentials/reusable-snippets"
            ]
          },
          {
            "group": "AI tools",
            "pages": [
              "ai-tools/cursor",
              "ai-tools/claude-code",
              "ai-tools/windsurf"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Documentation",
          "href": "https://mintlify.com/docs",
          "icon": "book-open-cover"
        },
        {
          "anchor": "Blog",
          "href": "https://mintlify.com/blog",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Supporto",
        "href": "mailto:info@getgrip.ai"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Prenota una Demo",
      "href": "https://cal.com/fil-liv-getgrip/demo-it"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/mintlify",
      "github": "https://github.com/mintlify",
      "linkedin": "https://linkedin.com/company/mintlify"
    }
  }
}
